#include <iostream>

using namespace std;
int main(){

    int numarray[4];
    for(int i = 0; i < 4; i++){
        cout << "Введіть елемент масиву [" << i + 1 << "]: "<< endl;  
        cin >> numarray[i];
    }

    int summa = 0;
    for(int i = 0; i < 4; i++){
        summa += numarray[i];
    }
    cout << "Сума всіх елементів масиву: " << summa << endl;

    for(int i = 0; i < 4; i++){
        cout << "Елементи масиву: " << numarray[i] << endl;
    }
    return 0;
}
